<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="2dp"
    app:cardMaxElevation="10dp"
    android:layout_marginEnd="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tarif_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Mobi 20"
            android:textColor="#DF1010"/>
        <LinearLayout
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tarif_code"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="*111*120#"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/mini_description"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="40 000/2 000 so`m oyilik/kunlik abonent to`lovi 1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>